{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "jsx": "react",
    "outDir": "build",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true, //because of the require conflict between node and react-native 
    "strict": true
  },
  "exclude": [
    "App.js",
    "App.test.js",
    "build",
    "node_modules",
    "rn-cli.config.js"
  ],
  "compileOnSave": true
}